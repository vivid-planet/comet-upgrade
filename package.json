{
    "name": "@comet/upgrade",
    "version": "1.8.0",
    "description": "Upgrade scripts for Comet DXP",
    "homepage": "https://github.com/vivid-planet/comet-upgrade#readme",
    "bugs": {
        "url": "https://github.com/vivid-planet/comet-upgrade/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet-upgrade"
    },
    "license": "BSD-2-Clause",
    "author": "Vivid Planet Software GmbH <office@vivid-planet.com> (https://www.vivid-planet.com/)",
    "main": "lib/index.js",
    "bin": "bin/index.js",
    "files": [
        "bin/index.js",
        "lib/**/*.js"
    ],
    "scripts": {
        "build": "npm run clean && tsc",
        "clean": "rimraf lib/",
        "lint": "run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint --max-warnings 0 src/",
        "lint:tsc": "tsc --noEmit",
        "prepare": "husky install",
        "start": "npm run clean && tsc --watch"
    },
    "dependencies": {
        "eslint": "^8.56.0",
        "glob": "^10.3.10",
        "prettier": "^2.8.1",
        "semver": "^7.3.8",
        "ts-morph": "^22.0.0"
    },
    "devDependencies": {
        "@comet/eslint-config": "^3.2.1",
        "@types/node": "^20.0.0",
        "@types/prettier": "^2.7.1",
        "@types/semver": "^7.3.13",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.9.4"
    },
    "engines": {
        "node": "20"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
