{
    "name": "@comet/upgrade",
    "version": "1.119.0",
    "description": "Upgrade scripts for Comet DXP",
    "homepage": "https://github.com/vivid-planet/comet-upgrade#readme",
    "bugs": {
        "url": "https://github.com/vivid-planet/comet-upgrade/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/vivid-planet/comet-upgrade"
    },
    "license": "BSD-2-Clause",
    "author": "Vivid Planet Software GmbH <office@vivid-planet.com> (https://www.vivid-planet.com/)",
    "type": "module",
    "exports": "./lib/index.js",
    "bin": "bin/index.js",
    "files": [
        "lib/**/*.js"
    ],
    "scripts": {
        "build": "npm run clean && tsc",
        "clean": "rimraf lib/",
        "lint": "run-p lint:eslint lint:tsc",
        "lint:eslint": "eslint src/ **/*.json --max-warnings 0 --no-warn-ignored",
        "lint:tsc": "tsc --noEmit",
        "prepare": "husky",
        "start": "npm run clean && tsc --watch"
    },
    "dependencies": {
        "chalk": "^5.6.2",
        "eslint": "^9.37.0",
        "glob": "^11.0.3",
        "prettier": "^3.6.2",
        "semver": "^7.7.3",
        "ts-morph": "^27.0.0"
    },
    "devDependencies": {
        "@comet/eslint-config": "^8.4.0",
        "@tsconfig/node22": "^22.0.2",
        "@types/node": "^22.18.10",
        "@types/semver": "^7.7.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.4",
        "npm-run-all2": "^8.0.4",
        "rimraf": "^6.0.1",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": "22"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    }
}
